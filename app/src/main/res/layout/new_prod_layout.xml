<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soft_grey_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rhexa.rhexus.pkgProduto.newProdActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:columnCount="2">

            <ImageView
                android:id="@+id/nav_menu"
                android:layout_width="0dp"
                android:layout_column="0"
                android:layout_columnWeight="0.16"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/bt_op" />

            <TextView
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginRight="15dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:scaleType="fitCenter"
                android:text="PRODUTOS"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: "
                    android:textSize="20dp"
                    android:textStyle="normal"
                    />

                <EditText
                    android:id="@+id/new_prod_layout_editId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:ems="20"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome: "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/new_prod_layout_editNome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:ems="30"
                    android:inputType="textPersonName" />

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/new_prod_layout_editdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="30"
                android:inputType="textPersonName" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código: "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/new_prod_layout_editcodigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:ems="30"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/new_prod_layout_readbt"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_width="0dp"
                    android:layout_columnWeight="0.16"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitCenter"
                    android:layout_height="50dp"
                    />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Custo: "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/new_prod_layout_editcusto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="30"
                        android:hint="R$"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preço: "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/new_prod_layout_editpreco"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="30"
                        android:hint="R$"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantidade: "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/new_prod_layout_editqntd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:hint="0.0"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Margem: "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/new_prod_layout_editmargem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="30"
                        android:hint="%"
                        android:inputType="numberDecimal" />
                </LinearLayout>

            </GridLayout>

            <ImageView
                android:id="@+id/new_prod_layout_editimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/new_prod_layout_savebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#AAAAAA"
                    android:text="Salvar" />

                <Switch
                    android:id="@+id/new_prod_ativosw"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ativo "
                    android:textSize="24dp"
                    android:layout_margin="15dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
