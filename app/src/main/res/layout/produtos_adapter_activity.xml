<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="abrirCadastroProduto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:background="#BBBBBB"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:text="Nome"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textSize="22dp"
                android:id="@+id/produto_adapter_editNome"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Estoque: "
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    />

                <TextView
                    android:text="Quantidade"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    android:id="@+id/produto_adapter_editQuantidade"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Custo: R$"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    />

                <TextView
                    android:text="Custo"
                    android:layout_width="220dp"
                    android:layout_height="25dp"
                    android:textSize="14dp"
                    android:id="@+id/produto_adapter_editCusto"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Preço: R$"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    />

                <TextView
                    android:text="Preço"
                    android:layout_width="220dp"
                    android:layout_height="25dp"
                    android:textSize="14dp"
                    android:id="@+id/produto_adapter_editPreco"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/produto_adapter_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="TextView"
        android:visibility="invisible" />

</android.support.constraint.ConstraintLayout>
