<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soft_grey_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedido:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_columnSpan="2"/>

                <TextView
                    android:id="@+id/new_pedido_layout_numeroPed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_columnSpan="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cliente:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_columnSpan="2"/>

                <EditText
                    android:id="@+id/new_pedido_layout_editCodPessoa"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:ems="5"
                    android:hint="00000"
                    android:textAlignment="center"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/new_prod_pedido_editCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:ems="30"
                    android:hint="Nome da pessoa"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desconto:"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_columnSpan="2"/>

                <EditText
                    android:id="@+id/new_prod_layout_editmargem"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:hint="%"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/new_pedido_layout_editDesc"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:hint="R$"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"  />

            </GridLayout>

        <Button
            android:id="@+id/new_pedido_layout_savebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:text="Salvar" />

    </LinearLayout>

</ScrollView>
